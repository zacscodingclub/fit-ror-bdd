<div class="col-md-8 col-xs-12">
  <p id="notice"><%= notice %></p>
  <h1><%= @friend.full_name %>'s Recent Workouts</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Exercise</th>
        <th>Work Sets</th>
        <th>Comments</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.name %></td>
          <td><%= exercise.work_sets %></td>
          <td><%= truncate(exercise.details, length: 50) %></td>
          <td><%= exercise.workout_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= content_tag :div, "", id: "chart", data: {workouts: @exercises}, style: "height:250px" %>

  <%= link_to "Back", user_exercises_path(current_user), class: "btn btn-primary link" %>
</div>