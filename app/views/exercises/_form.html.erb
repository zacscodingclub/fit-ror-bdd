<div class="row">
  <div class="col-md-12">
    <%= form_for([current_user, @exercise], :html =>{ class: "form-horizontal", role: "form"}) do |f| %>
      <% if @exercise.errors.any? %>
        <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
        <ul>
          <%= @exercise.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>

      <% end %>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :name, "Exercise" %><br />
        </div>
        <div class="col-md-6">
          <%= f.text_field :name, class: 'form-control' , autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :work_sets, "Work Sets (sets x reps x weight)" %><br />
        </div>
        <div class="col-md-6">
          <%= f.text_field :work_sets, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :details %><br />
        </div>
        <div class="col-md-6">
          <%= f.text_area :details, rows: 10, class: 'form-control', placeholder: "How'd it go?" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :workout_date, "Date" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :workout_date, class: 'form-control', id: 'exercise_workout_date' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
          <%= f.submit "Add Workout", class: 'btn btn-success btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
